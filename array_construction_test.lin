fun main() {
    // Test arrayOf function
    val arr1 = arrayOf(1, 2, 3, "hello", true)
    println("Array with mixed types: " + arr1.toString())
    
    // Test intArrayOf function
    val intArr = intArrayOf(10, 20, 30, 40)
    println("Integer array: " + intArr.toString())
    
    // Test doubleArrayOf function
    val doubleArr = doubleArrayOf(1.5, 2.7, 3.14)
    println("Double array: " + doubleArr.toString())
    
    // Test stringArrayOf function
    val stringArr = stringArrayOf("apple", "banana", "cherry")
    println("String array: " + stringArr.toString())
    
    // Test accessing array elements
    println("First element of intArr: " + intArr[0])
    println("Second element of stringArr: " + stringArr[1])
    
    // Test array size
    println("Size of intArr: " + intArr.size)
    println("Size of stringArr: " + stringArr.size)
}