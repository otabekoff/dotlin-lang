fun main() {
    // Test array construction
    val arr = arrayOf(1, 2, 3, 4, 5)
    println("Array size: " + arr.size.toString())
    
    // Test array indexing
    println("Element at index 2: " + arr[2].toString())
    
    // Test array methods
    println("First element: " + arr.get(0).toString())
    arr.set(1, 99)
    println("After set(1, 99): " + arr[1].toString())
    
    // Test array with different types
    val strArr = arrayOf("hello", "world", "dotlin")
    println("String array: " + strArr.contentToString())
    
    // Test mixed array
    val mixedArr = arrayOf(1, "two", true, 3.14)
    println("Mixed array size: " + mixedArr.size)
}
