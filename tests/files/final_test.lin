fun main(args: Array<String>) {
    println("=== Final Dotlin Test ===")
    println("Total args: " + args.size().toString())
    
    if (args.size() > 0) {
        val firstArg = args[0]
        println("First arg: " + firstArg)
        println("First arg length: " + firstArg.length.toString())
        println("Substring (1-5): " + firstArg.substring(1, 5))
        println("Index of \"otlin\": " + firstArg.indexOf("otlin").toString())
    }
    
    if (args.size() > 1) {
        val secondArg = args[1]
        println("Second arg: " + secondArg)
    }
    
    println("=== Test Complete ===")
}