fun main() {
    println("Line 1\nLine 2")
    println("Tab\tSeparated")
    println("Quote: \"Hello\"")
    println("Backslash: \\")
    
    val name = "Alice"
    println("Hello, ${name}\nWelcome!")

    println("--- Characters ---")
    val c1 = 'a'
    val c2 = '\n'
    val c3 = '\''
    println(c1)
    println("Newline in char literal follows:")
    println(c2)
    println(c3)

    println("--- Raw Strings ---")
    val raw = """
        Multiple
        Lines
    """
    println(raw)

    val age = 30
    val rawInterp = """Age: $age"""
    println(rawInterp)

    val rawWithEscapes = """Backslash: \, Newline: \n"""
    println(rawWithEscapes)
}
